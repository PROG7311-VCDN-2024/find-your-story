<!--Changes the model to ProductViewModel so that the book cover image can be displayed in Base64String with its associated data.-->
@model IEnumerable<FindYourStoryApp.Models.ProductViewModel>
@using System;
@{
    ViewData["Title"] = "Index";
}
<br>
<!--Displays all products and their details in a neat table format.-->
<h1>Products</h1>

<p>
    <!--Places an image and label instead of an action link for Create New.-->
    <a asp-action="Create">
        <img src="~/img/Add New_Icon.png" height="40" width="40" /><label>Create New</label>
    </a>
</p>
<table class="table">
    <thead>
         <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Base64BookCover)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>
            <th></th>
        </tr>
        }
    </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                  <!--Richard C (2024) demonstrates how to display a Base64 image in HTML.-->
                <img src="data:image/jpeg;base64,@item.Base64BookCover" height="30", width="30"/> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                    <!--TAB index (2024) demonstrates how to disable text wrapping.-->
                    <!--Places an image instead of an action link for Edit and Delete.-->
                <td style="white-space: nowrap;">
                    <a asp-action="Edit" asp-route-id="@item.ProductId">
                        <img src="~/img/Edit_Icon.jpg" height="40" width="40" />
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.ProductId">
                        <img src="~/img/Delete_Icon.png" height="40" width="40" />
                    </a>

            </td>
        </tr>
}
    </tbody>
</table>
