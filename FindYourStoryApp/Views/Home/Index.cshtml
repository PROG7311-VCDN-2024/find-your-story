@model FindYourStoryApp.Models.Product
@{
    ViewData["Title"] = "Home Page";
    int imageIndex = 0;
}
<head>
    <!--Uses the SuperHero Style sheet.
    Medium (2022) demonstrates how to reference a style sheet.-->
    <link rel="stylesheet" href="~/css/Lux_StyleSheet.css" />
</head>

<!--W3Schools (2024) demonstrates how to create columns cards.-->
<div class="row pb-3">

<!--FOREACH LOOP loops through all the book cover images in the list and displays
    each image in an img tag, as well as the associated book details through using an index variable.
    Additionally, each "Details" button links to the product ID of the book selected-->
<!--TutorialsTeacher (2024) demonstrates how to use a ViewBag.-->
@foreach (var bookProduct in ViewBag.ImageDataList)
 {
 
  <!--Organises the display of products in a neat card style.-->
      <div class="col-lg-3">
        <div class="row p-2">
          <div class="col-12 p-1">
             <div class="card shadow rounded">

                <!--Richard C (2024) demonstrates how to display a Base64 image in HTML.-->
                <img src="data:image/jpg;base64,@bookProduct"/>

                    <div class="card-body pb-0">
                        <div class="pl-1">
                            <p class="card-title h5 text-dark text-uppercase text-center">@ViewBag.BookDetailList[imageIndex].Title</p>
                            <p class="card-title text-warning text-center">by <b>@ViewBag.BookDetailList[imageIndex].Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-center">R @ViewBag.BookDetailList[imageIndex].Price</p>
                        </div>

                        <!--IF statement checks the boolean value of the InStock property and displays an appropriate
                            value of either "Available"/"Sold Out" instead of "True/False".
                        -->
                        @if (@ViewBag.BookDetailList[imageIndex].InStock > 0)
                        {
                            <p class="text-success">Stock: Available</p>
                        }
                        else
                        {
                            <p class="text-danger">Stock: Sold Out</p>
                        }
                    </div>
                    <div>
                        <a asp-action="BookDetails"
                           asp-route-productId="@ViewBag.BookDetailList[imageIndex].ProductId"
                           class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
            </div>
        </div>
        </div>
   </div>
        imageIndex++;
 }<!--end of FOREACH LOOP-->
 </div>
        <br>
        <br>
        <!--W3Schools (2024) demonstrates the <section> tag.-->
        <!--This section provides the Find Your Story contact info to the user.-->
        <section id="Contact">
            <h1>Contact Us</h1>
            <p>findyourstory@gmail.com</p>
            <p>079 678 3423</p>
        </section>
