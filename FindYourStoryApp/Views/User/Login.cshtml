@model FindYourStoryApp.Models.User
@{
	ViewBag.Title = "Login";
}
<h2>Log In</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Displays the form fields for the username and password model properties in the User class, in addition to, binding and 
                validating the entered data to the username and password.
            -->
            <div class="form-group">
                <label class="control-label">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" style="margin-top:30px;" />
            </div>
            <div class="form-group">
                <p>@ViewBag.Message</p>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
