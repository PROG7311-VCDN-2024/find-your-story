@model FindYourStoryApp.Models.User
@{
	ViewBag.Title = "Login";
}
<h2>Log In</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Displays the form fields for the username and password model properties in the User class, in addition to, 
                binding and validating the entered data to the username and password.
            -->
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input type="password" name="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" style="margin-top:30px;" />
            </div>
            <!--TutorialsTeacher (2024) demonstrates how to use a ViewBag.-->
            <div class="form-group">
                <p>@ViewBag.LoginError</p>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
